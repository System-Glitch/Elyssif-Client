<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>

<FlowPane fx:id="pane" alignment="CENTER" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.elyssif.client.gui.controller.PaginateController">
	<children>
	   <BorderPane>
		   <left>
		      <JFXButton fx:id="previousButton" prefWidth="24.0" BorderPane.alignment="CENTER">
		         <graphic>
		            <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
		               <image>
		                  <Image url="@img/left.png" />
		               </image>
		            </ImageView>
		         </graphic>
		      </JFXButton>
		   </left>
		   <right>
		      <JFXButton fx:id="nextButton" prefWidth="24.0" BorderPane.alignment="CENTER">
		         <graphic>
		            <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
		               <image>
		                  <Image url="@img/right.png" />
		               </image>
		            </ImageView>
		         </graphic>
		      </JFXButton>
		   </right>
		   <center>
		      <Label fx:id="pageLabel" maxHeight="1.7976931348623157E308" text="0/0" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets left="10.0" right="10.0" />
               </BorderPane.margin></Label>
		   </center>
	   </BorderPane>
	</children>
</FlowPane>
