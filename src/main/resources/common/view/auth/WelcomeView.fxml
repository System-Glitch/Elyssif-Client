<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import java.lang.String?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<FlowPane fx:id="pane" alignment="CENTER" columnHalignment="CENTER" prefHeight="635.0" prefWidth="1030.0" styleClass="gradient" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.elyssif.client.gui.controller.auth.WelcomeController">
   <children>
      <VBox fx:id="fadePane" alignment="TOP_CENTER" spacing="60.0">
         <children>
            <VBox alignment="TOP_CENTER" spacing="10.0">
               <children>
                  <ImageView fitHeight="125.0" fitWidth="125.0" pickOnBounds="true" preserveRatio="true" smooth="true">
                     <image>
                        <Image url="@../img/logo/logo_white_512.png" />
                     </image>
                  </ImageView>
                  <Label styleClass="main-title" text="Elyssif" textAlignment="CENTER" />
               </children>
            </VBox>
            <HBox spacing="50.0">
               <children>
                  <JFXButton buttonType="RAISED" onAction="#loginClicked" prefWidth="125.0" text="%login">
                     <styleClass>
                        <String fx:value="blue-700" />
                        <String fx:value="welcome-btn" />
                     </styleClass>
                  </JFXButton>
                  <JFXButton buttonType="RAISED" layoutX="10.0" layoutY="10.0" onAction="#registerClicked" prefWidth="125.0" text="%register">
                     <styleClass>
                        <String fx:value="blue-700" />
                        <String fx:value="welcome-btn" />
                     </styleClass>
                  </JFXButton>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</FlowPane>
